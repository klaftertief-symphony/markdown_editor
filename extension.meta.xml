<?xml version="1.0" encoding="UTF-8"?>
<extension id="markdown_editor" status="released" xmlns="http://symphony-cms.com/schemas/extension/1.0">
	<name>Markdown Editor</name>
	<description>Adds a markdown editor to every markdown textarea field on every entry page.</description>
	<repo type="github">https://github.com/klaftertief/markdown_editor</repo>
	<types>
		<type>Text Formatters</type>
	</types>
	<authors>
		<author>
			<name github="klaftertief" symphony="klaftertief">Jonas Coch</name>
			<website>http://klaftertief.de</website>
		</author>
	</authors>
	<dependencies>
		<dependency>markdown</dependency>
	</dependencies>
	<releases>
		<release version="2.0" date="TBA" min="4.0.0" max="4.x.x" php-min="5.6.x" php-max="7.x.x">
			- Update for Symphony 4.x
			- PHP7 Compatibility
		</release>
		<release version="1.0" date="2012-05-23" min="2.3">
			First officially released version.
		</release>
	</releases>
</extension>
